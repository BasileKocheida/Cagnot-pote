 


            <!--   Form Section   -->
            <div class="card">
                <div class="card-content">
                    <div class="row">
                        {{ form_start(form) }}

                            <h5 class="center">Votre identité</h5>
                            <div class="input-field col s12 l6">
                                {{ form_widget(form.participant_id.email) }}
                                {{ form_label(form.participant_id.email) }}
                            </div>

                           <div class="input-field col s12 l6">

                                {% if amount is defined %}
                                    {{ form_widget(form.amount, {
                                        'attr': {'min': '1' , 'value' : amount}
                                    }) }}
                                {% else %}
                                    {{ form_widget(form.amount, {
                                        'attr': {'min': '1'}
                                    }) }}
                                {% endif %}
                                    {{ form_label(form.amount, 'Montant', {
                                        'label_attr': {'class': 'amount'}
                                    }) }}

                            </div>

                            <p>
                                <label>
                                    {{ form_widget(form.participant_id.is_anonymous) }}
                                    <span>Masquer mon identité auprès des autres participants</span>
                                </label>
                            </p>
                                        
                                    
                          <div class="clearfix"></div>
                            <h5 class="center">Paiement</h5>
                            
                            <div class="input-field col s12">
                                {{ form_widget(form.participant_id.name) }}
                                {{ form_label(form.participant_id.name) }}
                               
                            </div>
                            <div class="input-field col s12" id="card-element">
                                <input id="card_number" type="text" class="validate">
                                <label id="card-element" for="card_number">Numéro de la carte</label>
                            </div>
                            <div class="input-field col s12 l6">
                                <a href="#!" class="btn btn-large waves-effect waves-light grey col s12">Annuler</a>
                            </div>
                            <div class="input-field col s12 l6">
                                <button class="btn btn-large waves-effect waves-light pink lighten-1 col s12" type="submit" name="action">
                                    Participer
                                    <i class="material-icons right">euro_symbol</i>
                                </button>
                            </div>

                            

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>